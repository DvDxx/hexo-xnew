h1
  font-size 2.8em
  letter-spacing -2px
  line-height 1.2em
  text-indent -3px

h2
  font-size 2.3em
  letter-spacing -1px
  line-height 1.2em
  text-indent -2px

h3
  font-size 2.0em

h4
  font-size 1.8em
  margin-bottom 0

h5
  font-size 1.5em

h6
  font-size 1.2em

a
  color lighten($body-color, 50%)
  transition color ease .3s
  &:hover
    color $link-article-color

hr
  display block
  height 1px
  border 0
  border-top darken($background-color, 15%) 1px solid
  margin 40px 0
  padding 0

  &:after
    display block
    content ''
    width 7px
    height 7px
    border darken($background-color, 12%) 1px solid
    position relative
    top -5px
    left 50%
    margin-left -5px
    background darken($background-color, 15%)
    border-radius 100%
    box-shadow $background-color 0 0 0 5px

p, ul, ol, dl, table
  margin 20px 0

ol ol, ul ul, ul ol, ol ul
  margin 5px 0

dl dt
  clear left
  float left
  font-weight bold
  margin-bottom 12px
  overflow hidden
  text-align right
  text-overflow ellipsis
  white-space nowrap
  width 180px

dl dd
  margin-left 200px
  margin-bottom 12px
